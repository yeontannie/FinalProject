@model FinalProject.Models.Like


<div>
    <form method="post" asp-controller="Items" asp-action="Like">
        <div class="form-group">
            <input type="hidden" asp-for="ItemID" />
            <span asp-validation-for="ItemID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="User_Name" value="@User.Identity.Name.ToString()" />            
        </div>
        <div class="form-group">
            <input type="submit" value="Like" class="btn btn-primary" />
        </div>
    </form>
</div>
