@model FinalProject.Models.Comment


<div>
    <form method="post" asp-controller="Items" asp-action="Comment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="ItemID" />
            <span asp-validation-for="ItemID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="User_Name" value="@User.Identity.Name.ToString()" />
            <span asp-validation-for="User_Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Text" class="form-control" placeholder="Add a Comment..." />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-primary" />
        </div>
    </form>
</div>